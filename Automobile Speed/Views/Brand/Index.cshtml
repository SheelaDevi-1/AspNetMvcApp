 @model List<Brand>
<div class="container">
	 <div class="row mb-4">
		 <div class="col-md-6 text-uppercase">
			 <h2>Brand List</h2>
         </div>
		 <div class="col-md-6 text-end">

			<a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create</a>
         
         </div>

	 </div>
	 <hr/>
	 <table id="table" class="table table-bordered table-striped"> 
		 <thead>
			 <tr>
				 <th class="text-center">Name</th>
				 <th class="text-center">Established Year</th>
				 <th class="text-center">Action</th>

				</tr>
		 </thead>
		 <tbody>
			 @foreach(var item in Model)
			{
				<tr>
					<td width="40%">@item.Name</td>
					<td width="40%">@item.EstablishedYear</td>
					<td class="d-flex align-items-center justify-content-center"> 
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id"
								class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="top" title="Details">
								<i class="bi bi-info-circle"></i>
								</a>
							<a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id"
							   class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id"
							   class="btn btn-danger" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
								<i class="bi bi-trash"></i>
							</a>
						</div>
                    </td>
				</tr>
			}
		</tbody>
	 </table>
 </div> 
 @section Scripts{
	 <script>
		 $('.table').DataTable();//creating datatable
	 </script>
 }