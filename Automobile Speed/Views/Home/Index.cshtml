@{
    ViewBag.Title = "Home";
}
<div class="text-center my-5">
    <h1 class="display-3 fw-bold">🚗 Welcome to the Car Brand App</h1>
    <p class="lead text-muted">
        Discover and manage popular car brands from around the world.
    </p>
    <a href="/Brand" class="btn btn-primary btn-lg mt-3">Explore Brands</a>
</div>
<div class="container mt-4">
    <!-- Add margin top -->
    <div id="carBrandCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
        <!-- carousel content -->
    </div>
</div>


<div id="carBrandCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carBrandCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Toyota"></button>
        <button type="button" data-bs-target="#carBrandCarousel" data-bs-slide-to="1" aria-label="BMW"></button>
        <button type="button" data-bs-target="#carBrandCarousel" data-bs-slide-to="2" aria-label="Tesla"></button>
    </div>
    <div class="carousel-inner rounded shadow-sm">
        <div class="carousel-item active">
            <img src="~/images/Audi.jpg" class="d-block w-100" alt="Audi">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                <h5>Audi</h5>
                <p>Reliable and innovative Japanese cars.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/bmw.jpg" class="d-block w-100" alt="BMW">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                <h5>BMW</h5>
                <p>Luxury and performance from Germany.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/tesla.jpg" class="d-block w-100" alt="Tesla">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
                <h5>Tesla</h5>
                <p>Electric cars driving the future.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carBrandCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carBrandCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

